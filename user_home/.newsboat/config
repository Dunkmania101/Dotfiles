#########
# Style #
#########

include /usr/share/doc/newsboat/contrib/colorschemes/gruvbox
color listfocus default default bold
color listfocus_unread default default reverse

############
# Defaults #
############

browser "nohup xdg-open %u"

############
# Keybinds #
############

# Movement
bind-key j down feedlist
bind-key k up feedlist
bind-key j next articlelist
bind-key k prev articlelist
bind-key J next-feed articlelist
bind-key K prev-feed articlelist
bind-key j down article
bind-key k up article

# Actions
bind-key SPACE macro-prefix

##########
# Macros #
##########

macro m set browser "nohup mpv --script=$HOME/.guix-profile/lib/mpris.so --force-window --no-keepaspect-window --loop %u"; open-in-browser; set browser "nohup xdg-open %u"; redraw
macro n set browser "nohup nyxt %u"; open-in-browser; set browser "nohup xdg-open %u"; redraw
macro f set browser "nohup librewolf %u"; open-in-browser; set browser "nohup xdg-open %u"; redraw

