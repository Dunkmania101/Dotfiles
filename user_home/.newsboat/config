############
# Defaults #
############

max-items 0 # Means infinite
browser "nohup xdg-open %u"

############
# Keybinds #
############

# Movement
bind-key j down
bind-key k up
bind-key j next
bind-key k prev
bind-key J next-feed
bind-key K prev-feed
bind-key j down
bind-key k up
bind-key h quit
bind-key l open
bind-key { prev-dialog
bind-key } next-dialog
bind-key L toggle-show-read-feeds
bind-key g home
bind-key G end

# Actions
bind-key SPACE macro-prefix

##########
# Macros #
##########

macro m set browser "nohup mpv --script=$HOME/.guix-profile/lib/mpris.so --force-window --no-keepaspect-window --loop %u"; open-in-browser; set browser "nohup xdg-open %u"; redraw
macro n set browser "nohup nyxt %u"; open-in-browser; set browser "nohup xdg-open %u"; redraw
macro f set browser "nohup librewolf %u"; open-in-browser; set browser "nohup xdg-open %u"; redraw

